            "command": "compass watch ."
        }

        {
            "label": "Start Live Server",
            "type": "shell",
            "command": "code --new-window --wait --send-to-terminal \"editor.action.liveServer.openWithLiveServer\"",
            "isBackground": true
        }

    ]
}